{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "skipLibCheck": true,
    "strict": true,
    "target": "es5",
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["jest", "@testing-library/jest-dom", "cypress", "cypress-file-upload"],
    "baseUrl": "src",
    "paths": {
      "common/*": ["common/*"],
      "components/*": ["components/*"],
      "containers/*": ["containers/*"],
      "fireConfig/*": ["fireConfig/*"],
      "hooks/*": ["hooks/*"],
      "pages/*": ["pages/*"],
      "reducers/*": ["reducers/*"],
      "static/*": ["static/*"],
      "store/*": ["store/*"],
      "styles/*": ["styles/*"],
      "types/*": ["types/*"],
      "utils/*": ["utils/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts", "**/*.tsx"]
}
